                <Font size="30.0"/>
            </font>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </FlowPane>
    <FlowPane alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
              GridPane.rowIndex="2">
        <Button fx:id="sort1" mnemonicParsing="false" onAction="#sort1" prefHeight="28.0" prefWidth="100.0"
                text="Aufsteigend">
