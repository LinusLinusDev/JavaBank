                <Insets left="25.0" right="25.0"/>
            </FlowPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="sort2" mnemonicParsing="false" onAction="#sort2" prefHeight="28.0" prefWidth="100.0"
                text="Absteigend">
