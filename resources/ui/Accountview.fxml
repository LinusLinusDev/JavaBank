            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#loeschen" text="Löschen"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
    </FlowPane>
    <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
        <Button fx:id="zurueck" alignment="CENTER" mnemonicParsing="false" onAction="#zurueck" prefHeight="65.0"
                prefWidth="301.0" text="Zurück">
