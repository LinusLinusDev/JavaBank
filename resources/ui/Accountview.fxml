                <Insets left="25.0" right="25.0"/>
            </FlowPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="sort3" mnemonicParsing="false" onAction="#sort3" prefHeight="28.0" prefWidth="140.0"
                text="Nur positive Beträge">
            <FlowPane.margin>
                <Insets left="5.0" right="5.0"/>
            </FlowPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="sort4" mnemonicParsing="false" onAction="#sort4" prefHeight="28.0" prefWidth="140.0"
                text="Nur negative Beträge">
            <FlowPane.margin>
                <Insets left="5.0" right="5.0"/>
            </FlowPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="transaktionErstellen" mnemonicParsing="false" onAction="#erstelle" prefHeight="70.0"
                prefWidth="318.0" text="Transaktion erstellen">
            <font>
                <Font size="30.0"/>
            </font>
            <FlowPane.margin>
                <Insets top="35.0"/>
            </FlowPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </FlowPane>
</GridPane>
